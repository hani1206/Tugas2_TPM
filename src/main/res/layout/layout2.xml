<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tugas2.Layout">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="bottom"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:src="@drawable/profile"
            android:layout_width="250dp"
            android:layout_height="250dp"/>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/nama"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:textSize="18dp"
                android:text="Nama"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/sama"
                android:layout_toRightOf="@id/nama"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:textSize="18dp"
                android:text=":"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tnama"
                android:layout_toRightOf="@id/sama"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:textSize="18dp"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@+id/nama"
                android:id="@+id/nim"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:text="NIM"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"/>
            <TextView
                android:id="@+id/sama1"
                android:layout_marginTop="12dp"
                android:layout_below="@id/sama"
                android:layout_toRightOf="@id/nim"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:textSize="18dp"
                android:text=":"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tnim"
                android:layout_marginTop="12dp"
                android:layout_below="@id/nama"
                android:layout_toRightOf="@id/sama1"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:textSize="18dp"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@+id/nim"
                android:id="@+id/nilai"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:text="Nilai"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"/>
            <TextView
                android:id="@+id/sama2"
                android:layout_marginTop="12dp"
                android:layout_below="@id/sama1"
                android:layout_toRightOf="@id/nilai"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:textSize="18dp"
                android:text=":"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tnilai"
                android:layout_marginTop="12dp"
                android:layout_below="@id/nim"
                android:layout_toRightOf="@id/sama2"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:textSize="18dp"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>